<div class="container">

  <h2><%= @list.name %></h2>
  <div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card">
    <h3><%= bookmark.movie.title %></h3>
    <p><%= bookmark.comment %></p>
    <img src="<%= bookmark.movie.poster_url %>" alt="poster_url" width=150px>
    <p class="container"><%= bookmark.movie.overview %></p>
    <%= link_to "Delete", bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"delete_bookmark link_to" %> </div>
  <% end %>
  </div>
  <div class="bottom_link">
    <%= link_to "New bookmark", new_list_bookmark_path(@list), class:"link_to" %>

    <%= link_to "Delete list", list_path(@list),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"link_to" %>

    <%= link_to "Back", root_path, class:"link_to" %>
  </div>
</div>
